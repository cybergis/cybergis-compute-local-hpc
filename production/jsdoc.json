{
    "tags": {
        "allowUnknownTags": ["optional"]
    },
    "plugins": [
        "node_modules/better-docs/typescript",
        "plugins/markdown"
    ],
    "source": {
        "include": ["."],
        "includePattern": ".(ts|tsx)$",
        "excludePattern": "(node_modules|production)"
    },
    "opts": {
        "template": "node_modules/docdash",
        "encoding": "utf8",
        "destination": "production/jsdoc/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}